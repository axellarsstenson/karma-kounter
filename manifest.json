{
  "name": "Karma Kounter",
  "description": "A Chrome extension that tracks your reddit Karma. Clicking
    it will change the display between Link and Comment Karma.",
  "manifest_version": 2,
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/snoo16.png",
      "32": "images/snoo32.png",
      "48": "images/snoo48.png",
      "128": "images/snoo128.png"
    },
    "icons": {
      "16": "images/snoo16.png",
      "32": "images/snoo32.png",
      "48": "images/snoo8.png",
      "128": "images/snoo128.png"
    }
},
  "permissions": [
    "tabs",
    "https://www.reddit.com/"
  ]
}
